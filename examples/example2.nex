putPy random

func main() do
    log("Welcome to the Number Guessing Game!")
    log("I have selected a number between 1 and 100. Can you guess it?")

    # Generate a random number between 1 and 100
    secret_number = random.randint(1, 100)
    attempts = 0
    guessed = False

    while not guessed do
        log("Enter your guess (or type 'quit' to exit):")
        user_input = input()

        if user_input == "quit" then
            log("Thank you for playing!")
            return

        # Validate if the input is a number
        if not user_input.isdigit() then
            log("Please enter a valid number.")
            continue

        guess = int(user_input)
        attempts += 1

        if guess < secret_number then
            log("Your guess is too low. Try again!")
        elif guess > secret_number then
            log("Your guess is too high. Try again!")
        else
            guessed = True
            log(f"Congratulations! You've guessed the number {secret_number} in {attempts} attempts.")

    return

# Start the game
main()
